<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DayTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!-- 文本颜色 -->
        <item name="textColor">@color/black_text</item>
        <item name="secondTextColor">@color/black_second_text</item>
        <item name="hintTextColor">@color/black_hint_text</item>
        <item name="dividerColor">@color/black_divider</item>
        <!-- 背景色 -->
        <item name="widgetBackground">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="NightTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/black_colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_colorPrimary</item>

        <!-- 文本颜色 -->
        <item name="textColor">#CED1D5</item>
        <item name="secondTextColor">#A2A6A9</item>
        <item name="hintTextColor">#5A5B5E</item>
        <item name="dividerColor">@color/white_divider</item>
        <!-- 背景色 -->
        <item name="widgetBackground">@color/black_itemBackground</item>
        <item name="itemBackground">@color/black_itemBackground</item>
        <item name="android:windowBackground">@color/black_itemBackground</item>
    </style>

    <style name="Common_CardView" parent="CardView">
       <!-- 卡片颜色-->
        <item name="cardBackgroundColor">?itemBackground</item>
        <!--内边距-->
        <item name="contentPadding">@dimen/dp_8</item>
        <!--外边距-->
        <item name="cardElevation">@dimen/dp_4</item>
        <!--圆角半径-->
        <item name="cardCornerRadius">@dimen/dp_0</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>



</resources>
